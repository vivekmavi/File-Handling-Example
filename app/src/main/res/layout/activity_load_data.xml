<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paras.filehandling.LoadData">


    <TextView
        android:id="@+id/showData_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:text="TextView"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/load_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showData_TV"
        android:layout_marginStart="51dp"
        android:layout_marginTop="133dp"
        android:onClick="load"
        android:text="Load"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/previous_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/load_btn"
        android:layout_alignBottom="@+id/load_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:onClick="addMore"
        android:text="Add more"
        android:textAllCaps="false" />
</RelativeLayout>
